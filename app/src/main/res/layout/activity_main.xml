<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <!-- Menu -->
    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <Button
            android:id="@+id/button_detect_hole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detecting Hole"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical" />

        <Button
            android:id="@+id/button_detect_alodine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detecting Alodine"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical" />

        <Button
            android:id="@+id/button_detect_countersink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detecting Countersink"
            android:drawableStart="@android:drawable/ic_menu_crop"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical" />

        <Button
            android:id="@+id/button_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:drawableStart="@android:drawable/ic_menu_info_details"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical" />
    </LinearLayout>
</LinearLayout>
