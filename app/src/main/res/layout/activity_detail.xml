<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/graph_placeholder_imageview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/darker_gray"
        android:contentDescription="Graph Placeholder" />

    <ScrollView
        android:id="@+id/details_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/details_container_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/label_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Label: Hole 1"
                android:padding="8dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/measurement_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Measurement: 10.5mm"
                android:padding="8dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nominal_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nominal: 10.0mm +/- 0.2mm"
                android:padding="8dp"
                android:textSize="16sp" />

            <!-- Add more TextViews as needed for other details -->

        </LinearLayout>
    </ScrollView>
</LinearLayout>
